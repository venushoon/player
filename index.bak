<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ì›¹ TV í”Œë ˆì´ì–´ (í”Œë ˆì´ë¦¬ìŠ¤íŠ¸ í¬í•¨)</title>

    <link rel="stylesheet" href="https://cdn.plyr.io/3.7.8/plyr.css" />

    <style>
        /* ê¸°ë³¸ í˜ì´ì§€ ìŠ¤íƒ€ì¼ */
        body {
            font-family: 'Pretendard', sans-serif;
            background-color: #121212;
            color: #e0e0e0;
            margin: 0;
            height: 100vh;
            overflow: hidden;
        }

        /* ë©”ì¸ ë ˆì´ì•„ì›ƒ (Flexbox ì‚¬ìš©) */
        .main-container {
            display: flex;
            height: 100vh;
            width: 100vw;
        }

        /* ì™¼ìª½: ë¹„ë””ì˜¤ í”Œë ˆì´ì–´ ì˜ì—­ */
        .player-wrapper {
            flex: 3; /* 3:1 ë¹„ìœ¨ë¡œ ì™¼ìª½ì´ ë” ë„“ê²Œ */
            display: flex;
            justify-content: center;
            align-items: center;
            background-color: #000;
            padding: 1rem;
        }

        /* ì˜¤ë¥¸ìª½: í”Œë ˆì´ë¦¬ìŠ¤íŠ¸ ì˜ì—­ */
        .playlist-wrapper {
            flex: 1;
            background-color: #1e1e1e;
            overflow-y: auto; /* ëª©ë¡ì´ ê¸¸ì–´ì§€ë©´ ìŠ¤í¬ë¡¤ ìƒì„± */
            padding: 1rem;
            border-left: 2px solid #333;
        }

        .playlist-title {
            margin-top: 0;
            padding-bottom: 0.5rem;
            border-bottom: 1px solid #444;
            font-size: 1.2rem;
        }
        
        #playlist {
            list-style: none;
            padding: 0;
            margin: 0;
        }

        #playlist li {
            padding: 1rem 0.5rem;
            cursor: pointer;
            border-bottom: 1px solid #2c2c2c;
            transition: background-color 0.2s ease;
        }

        #playlist li:hover {
            background-color: #333;
        }
        
        /* í˜„ì¬ ì¬ìƒ ì¤‘ì¸ í•­ëª© ìŠ¤íƒ€ì¼ */
        #playlist li.active {
            background-color: #00bfff;
            color: #000;
            font-weight: bold;
        }

        /* Plyr í”Œë ˆì´ì–´ ì»¤ìŠ¤í…€ ìŠ¤íƒ€ì¼ */
        :root {
            --plyr-color-main: #00bfff;
        }
    </style>
</head>
<body>

    <div class="main-container">
        <div class="player-wrapper">
            <video id="player" playsinline controls></video>
        </div>
        <div class="playlist-wrapper">
            <h2 class="playlist-title">ğŸ“º ì±„ë„ ëª©ë¡</h2>
            <ul id="playlist"></ul>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/hls.js@latest"></script>
    <script src="https://cdn.plyr.io/3.7.8/plyr.polyfilled.js"></script>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const video = document.getElementById('player');
            const playlistElement = document.getElementById('playlist');
            // ğŸš¨ ì—¬ê¸°ì— ì œê³µí•˜ì‹  M3U ì£¼ì†Œë¥¼ ì…ë ¥í•˜ì„¸ìš”.
            const m3uUrl = 'https://s1f.oracle1126.duckdns.org/alive/api/m3u';

            let hls = new Hls();
            const player = new Plyr(video);
            window.player = player;
            window.hls = hls;

            // M3U íŒŒì¼ì„ ê°€ì ¸ì™€ íŒŒì‹±í•˜ëŠ” í•¨ìˆ˜
            async function fetchAndParsePlaylist() {
                try {
                    //  CORS ë¬¸ì œë¡œ ì§ì ‘ fetchê°€ ì‹¤íŒ¨í•  ìˆ˜ ìˆìŠµë‹ˆë‹¤.
                    // ì´ ê²½ìš° ì„œë²„ì—ì„œ Access-Control-Allow-Origin í—¤ë” ì„¤ì •ì´ í•„ìš”í•©ë‹ˆë‹¤.
                    const response = await fetch(m3uUrl);
                    if (!response.ok) {
                        throw new Error('ë„¤íŠ¸ì›Œí¬ ì‘ë‹µì´ ì˜¬ë°”ë¥´ì§€ ì•ŠìŠµë‹ˆë‹¤.');
                    }
                    const data = await response.text();
                    
                    const lines = data.split('\n');
                    const playlist = [];
                    for (let i = 0; i < lines.length; i++) {
                        if (lines[i].startsWith('#EXTINF:')) {
                            const title = lines[i].split(',').slice(1).join(',').trim();
                            const url = lines[i + 1].trim();
                            if (title && url) {
                                playlist.push({ title, url });
                            }
                        }
                    }
                    return playlist;
                } catch (error) {
                    console.error('í”Œë ˆì´ë¦¬ìŠ¤íŠ¸ë¥¼ ê°€ì ¸ì˜¤ëŠ” ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤:', error);
                    // fetch ì‹¤íŒ¨ ì‹œ ì‚¬ìš©ìì—ê²Œ ì•Œë¦¼
                    playlistElement.innerHTML = `<li>í”Œë ˆì´ë¦¬ìŠ¤íŠ¸ë¥¼ ë¶ˆëŸ¬ì˜¬ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. CORS ì •ì±…ì„ í™•ì¸í•˜ì„¸ìš”.</li>`;
                    return [];
                }
            }

            // íŠ¹ì • ì±„ë„ì„ ì¬ìƒí•˜ëŠ” í•¨ìˆ˜
            function playChannel(url, targetElement) {
                if (Hls.isSupported()) {
                    hls.loadSource(url);
                    hls.attachMedia(video);
                } else {
                    video.src = url;
                }
                player.play();

                // í˜„ì¬ ì¬ìƒëª©ë¡ 'active' í´ë˜ìŠ¤ ê´€ë¦¬
                document.querySelectorAll('#playlist li').forEach(li => li.classList.remove('active'));
                if (targetElement) {
                    targetElement.classList.add('active');
                }
            }

            // í”Œë ˆì´ë¦¬ìŠ¤íŠ¸ë¥¼ í™”ë©´ì— ê·¸ë¦¬ê³  ì´ë²¤íŠ¸ë¥¼ ì¶”ê°€í•˜ëŠ” í•¨ìˆ˜
            async function buildPlaylist() {
                const channels = await fetchAndParsePlaylist();
                if (channels.length === 0) return;

                playlistElement.innerHTML = ''; // ê¸°ì¡´ ëª©ë¡ ì´ˆê¸°í™”

                channels.forEach((channel, index) => {
                    const listItem = document.createElement('li');
                    listItem.textContent = channel.title;
                    listItem.dataset.url = channel.url;
                    playlistElement.appendChild(listItem);

                    listItem.addEventListener('click', () => {
                        playChannel(channel.url, listItem);
                    });

                    // ì²« ë²ˆì§¸ ì±„ë„ì„ ê¸°ë³¸ìœ¼ë¡œ ì¬ìƒ
                    if (index === 0) {
                        playChannel(channel.url, listItem);
                    }
                });
            }

            buildPlaylist();
        });
    </script>

</body>
</html>
